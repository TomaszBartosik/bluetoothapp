<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/pole_testowe_wiadomo"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/logButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLogClick"
        android:text="@string/log" />

    <Button
        android:id="@+id/toastButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onToastClick"
        android:text="@string/toast" />

    <Button
        android:id="@+id/rewriteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRewriteClick"
        android:text="@string/przepisana_wiad" />

    <TextView
        android:id="@+id/rewriteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/przepisana_wiadomo" />
</LinearLayout>